<link rel="stylesheet" href="/css/profile.css">
<h1>Users profile..!</h1>


 <% if(locals.user.id==profile_user.id){ %>
   <h1>
      <img src="<%= user.avatar %>" alt="<%= user.name %>" width="100" height="100">
     
   </h1>

    <form action="/users/profile-update/<%= user.id %>" enctype="multipart/form-data" method="POST">

        <input type="text" name="name" value="<%= user.name %>">
        <input type="text" name="email" value="<%= user.email %>">
        <input type="file" placeholder="Profile PIcture" name="avatar">
        <input type="submit" value="Update me..!">
    </form>

 <% }else{ %>
    
    <p><%= profile_user.name %></p>
    <p><%= profile_user.email %></p>
 <% } %>