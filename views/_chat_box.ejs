<% if (locals.user){ %>
	<div id="user-chat-box" >
		<div onclick="closeChat()">
			<button class="btn btn-danger">X</button>
		</div>
		<ul id="chat-messages-list">
			

		</ul>
		<div id="chat-message-input-container">
			<input id="chat-message-input" placeholder="Type message here">
			<button id="send-message">Send</button>
		</div>

	</div>
	<div id="class-room-btn" onclick="openChat()">
		<center><p>CHAT ROOM</p></center>
		
	</div>
<% } %>

<script>
	var chatRoom = document.getElementById('user-chat-box');
	var closeRoom = document.getElementById('class-room-btn');
	function openChat(){
		
		chatRoom.style.display = "block";
		closeRoom.style.display = "none";
	}
	function closeChat(){
		
		console.log("kjsfgkbklghnd");
		chatRoom.style.display = "none";
		closeRoom.style.display = "block";
	}
</script>