<link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <li id="post-<%= post._id %>" class="post-list-item">
           
                <b><div id="user-name"><a href="/users/profile/<%= post.userss._id %>" id="user-route"><%= post.userss.name %></a></div></b>
                
                <p id="post-content"><%= post.post_content %><i class="bi bi-heart"></i></p>
           
                <%= locals.file %>
                <% if(post.avatar){ %>
                        <img src="<%= post.avatar %>" alt="<%= post.userss.name %>"  id="picture" class="post-img"> 
                <% } %>        
                
                        <% if (locals.user){ %>

                                <div id="likes">
                                    
                                        <p class="display-likes likes-count " data-likes="<%= post.likes.length %>" id="<%=post._id%>"><%= post.likes.length %></p>
                                        
                                        <img class="display-likes img" src="https://img.icons8.com/ios-glyphs/30/000000/filled-like.png"/ id="like-img">
                                        
                                        <p id="comment-count"><%= post.comments.length %> </p>
                                        <img src="https://img.icons8.com/metro/26/000000/comments.png"/ id="comment-img">
                                </div>
                                
                               

                                <div id="like-con">
                                        <div id="lik">
                                                <a class="toggle-like-button"  data-likes="<%= post.likes.length %>" href="/users/toggle/?id=<%=post._id%>&type=Post">
                                                        <div id="like-button-1">
                                                                Like&nbsp<i class="fa fa-heart"></i>
                                                        </div>
                                                       
                                                        
                                                </a>
                                                
                                        </div>
                                        
                                        <% if(locals.user && locals.user.id == post.userss.id) { %>
                                        <div id="del-p">
                                                <a class="delete-post" href="/users/delete-post/<%= post._id %>" >
                                                        <div id="delete-button-1">
                                                                
                                                                <span id="span">Delete Post</span>
                                                        </div>
                                                 </a>
                                        </div>
                                                
                                        <% } %>
                                </div>
          
                            
                        <% }else{ %>
                                <div id="likes">
                                        <p class="display-likes count" data-likes="<%= post.likes.length %>" id="<%=post._id%>"><%= post.likes.length %></p>
                                        <img class="display-likes img" src="https://img.icons8.com/ios-glyphs/30/000000/filled-like.png"/ id="like-img">
                                        <%= post.comments.length %>Comments
                                </div>
                                
                        <% } %>
           
            
            <div id="comment-form">
                    <% if(locals.user){ %>
                            <form action="/users/create-comment"  id="new-comment"method="POST" >
                                <div class="input-group mb-3">
                                        <input type="text" class="form-control" aria-label="Recipient's username" aria-describedby="button-addon2" name="comment" placeholder="Comment..">
                                        <input type="hidden" name="post" value="<%= post._id %>" class="comment-input">
                                        <input type="submit" value="Add Comment" id="button-comm" class="comment-input comment-button">
                                </div>
                              
                            </form>
                    <% } %>
            </div>

            <div class="post-comments-container-<%= post._id %> post-comments-container">
                
               
                <%- include('_comment'); %>
            </div>
            <div id="for-border-down"></div>
    </li>
 
