<link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <li id="post-<%= post._id %>" class="post-list-item">
            
                <h1 id="user-name"><%= post.userss.name %></h1>
                
                <p id="post-content"><%= post.post_content %></p>
                <div id="for-border">
                </div>
                
                    
                        
                <img src="<%= post.avatar %>" alt="<%= post.userss.name %>"  id="picture">         
                
                
                
                        <% if (locals.user){ %>

                                <div id="likes">
                                        <p class="display-likes count" data-likes="<%= post.likes.length %>" id="<%=post._id%>"><%= post.likes.length %></p>
                                        <img class="display-likes img" src="https://img.icons8.com/officel/16/000000/filled-like.png"/ id="like-img">
                                </div>
                                
                               

                                <div id="for-border"></div>
                            
                                        
                                                <a class="toggle-like-button" data-likes="<%= post.likes.length %>" href="/users/toggle/?id=<%=post._id%>&type=Post">
                                                        <div id="like-button-1">
                                                                Like
                                                        </div>
                                                       
                                                        
                                                </a>
                                    
                                        
                             
                            
                        <% }else{ %>
                                <div id="likes">
                                        <p class="display-likes count" data-likes="<%= post.likes.length %>" id="<%=post._id%>"><%= post.likes.length %></p>
                                        <img class="display-likes img" src="https://img.icons8.com/officel/16/000000/filled-like.png"/ id="like-img">
                                </div>
                                
                        <% } %>
                 
              

                <% if(locals.user && locals.user.id == post.userss.id) { %>
                        <a class="delete-post" href="/users/delete-post/<%= post._id %>" >
                                <div id="delete-button-1">
                                        Delete Post
                                </div>
                         </a>
                <% } %>
                <br>
               
            
            <div id="comment-form">
                    <% if(locals.user){ %>
                            <form action="/users/create-comment"  id="new-comment"method="POST" >
                                    <input type="text" name="comment" placeholder="Add Comment" id="comment" class="comment-input">
                                    <input type="hidden" name="post" value="<%= post._id %>" class="comment-input">
                                    <input type="submit" value="Add Comment" id="button" class="comment-input">
                            </form>
                    <% } %>
            </div>

            <div class="post-comments-container">
                <% if( post.comments.length != 0 ){ %>
                        <h3 id="comment-heading">Comments: </h3>
                <% } %>
                <%- include('_comment'); %>
            </div>
    </li>
    
