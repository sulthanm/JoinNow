<ul id="post-comments-<%= post._id %>" class="comments-list">
    <h3 id="comment-heading">Comments: </h3>
    <% for (comment of post.comments){%>
    <li id="comment-<%= comment._id %>" class="comment-list-item">
        
            <h4 id="user-name">
                <%= comment.user.name %>
            </h4>
            <p><%= comment.content %></p>
           
            <% if(locals.user && locals.user.id == comment.user.id){ %> 
                    <a href="/users/delete-comment/<%= comment._id %>" id="delete-comment">X</a>
            <% } %>
            
            <div id="comment-likes-container">
                <% if (locals.user){ %>
                    <a class="toggle-like-button" data-likes="<%= comment.likes.length %>" href="/users/toggle/?id=<%=comment._id%>&type=Comment" >
                            <%= comment.likes.length %> Likes
                    </a>
                <% }else{ %>
                    <p id="likes-length"><%= comment.likes.length %> Likes </p>
                <% } %>
            </div>
            
    </li>
    <%} %>
</ul>