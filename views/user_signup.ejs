<link rel="stylesheet" type="text/css" href="/css/user_signup.css">
<link rel="stylesheet" type="text/css" href="/css/header.css">
<div id="container">
    <h2>Sign-Up</h2>
    <form action="/users/create" method="POST" id="sign-up-form">

        <input type="text" name="name" placeholder="Enter Your Name" required class="details">
        <input type="email"  name="email" placeholder="Enter Your Email" required class="details">
        <input type="password" name="password" placeholder="Enter Your Password"  required class="details">
        <input type="password"  name="confirm_password" placeholder="Confirm Your Password"  required class="details">
        <input type="submit" value="Sign-Up" id="submit-button" class="details">
    </form>
    <p>Or</p>
    <a href="/users/auth/google">
        <div class="google-btn">
            <div class="google-icon-wrapper">
              <img class="google-icon" src="https://upload.wikimedia.org/wikipedia/commons/5/53/Google_%22G%22_Logo.svg"/>
            </div>
           
            <p class="btn-text"><b>Google Sign In</b></p>
        </div>
    </a>

    
</div>

